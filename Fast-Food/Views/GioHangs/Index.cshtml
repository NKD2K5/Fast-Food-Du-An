@model IEnumerable<Fast_Food.Models.GioHang>

@{
    ViewData["Title"] = "Giỏ Hàng";
}

<h1>Giỏ Hàng</h1>
<table class="table">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Hình Ảnh</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Ghi Chú</th>
            <th>Mã Sản Phẩm</th>
            <th>Khách Hàng</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaGioHang" class="text-decoration-none">
						@item.MaMonNavigation.TenMon
                    </a>
                </td>
                <td>
                    <img src="@item.MaMonNavigation.HinhAnh" alt="Hình ảnh" style="width: 100px; height: 100px;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
                <td>
                    @if (item.MaCombo != null)
                    {
                        @Html.DisplayFor(modelItem => item.MaComboNavigation.MaMon) <!-- Hiển thị tên combo -->
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.MaMonNavigation.MaMon) <!-- Hiển thị tên món ăn -->
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.MaKhachHangNavigation.TenKhachHang)</td>
                <td>
                    <form action="/GioHangs/Delete" method="post">
                        <input type="hidden" name="id" value="@item.MaGioHang" />
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="post" asp-action="MuaSanPham">
    <button type="submit" class="btn btn-primary">Mua</button>
</form>