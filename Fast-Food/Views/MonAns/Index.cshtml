@model IEnumerable<Fast_Food.Models.MonAn>

<table class="table">
    <thead>
        <tr>
            @* <th>Loại Sản Phẩm</th> *@
            <th>Tên Món</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Trạng Thái</th>
            <th>Ngày Tạo</th>
            <th>Ngày Cập Nhật</th>
            <th>Chi Tiết</th>
            <th>Hình Ảnh</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>@item.LoaiSanPham</td> *@
                <td>@item.TenMon</td>
                <td>@item.Gia</td>
                <td>@item.SoLuong</td>
                <td>@item.TrangThai</td>
                <td>@item.NgayTao</td>
                <td>@item.NgayCapNhat</td>
                <td>@item.ChiTietFood</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        <img src="@item.HinhAnh" alt="Hình Ảnh" width="100" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaMon">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaMon">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaMon">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example" class="d-flex justify-content-center mt-4">
    <ul class="pagination">
        <li class="page-item @(ViewBag.Pager.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pg="@(ViewBag.Pager.CurrentPage - 1)" asp-route-timkiem="@ViewBag.TimKiem">Previous</a>
        </li>
        @for (int i = ViewBag.Pager.StartPage; i <= ViewBag.Pager.EndPage; i++)
        {
            <li class="page-item @(i == ViewBag.Pager.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pg="@i" asp-route-timkiem="@ViewBag.TimKiem">@i</a>
            </li>
        }
        <li class="page-item @(ViewBag.Pager.CurrentPage == ViewBag.Pager.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pg="@(ViewBag.Pager.CurrentPage + 1)" asp-route-timkiem="@ViewBag.TimKiem">Next</a>
        </li>
    </ul>
</nav>
