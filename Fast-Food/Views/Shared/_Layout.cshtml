<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fast_Food</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fast_Food.styles.css" asp-append-version="true" />
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <header>
        @{
            var maKhachHang = Context.Session.GetString("MaKhachHang");
            var tenKhachHang = Context.Session.GetString("TenKhachHang");
        }

        <div class="account-icon-container">
            <div class="account-dropdown">
                <div class="account-icon">
                    <i class="fas fa-user-circle"></i>
                    <span>@tenKhachHang</span>
                </div>

                <div class="dropdown-menu">
                    <a href="@Url.Action("Edit", "KhachHangs", new { id = maKhachHang })">Thông tin cá nhân</a>
                    <a href="@Url.Action("Index", "HoaDons", new { id = maKhachHang })">Đơn mua</a>
                    <a href="@Url.Action("Logout", "DangNhap")">Đăng xuất</a>
                </div>
            </div>
        </div>
        <!-- Icon Giỏ Hàng -->
        <a href="@Url.Action("Index", "GioHangs")" class="cart-icon">
            <i class="fas fa-shopping-cart"></i>
            <!-- Hiển thị số lượng sản phẩm trong giỏ hàng -->
            <span class="cart-badge">@ViewBag.SoLuongGioHang</span>
        </a>
        <!-- Menu Icon -->
        <button class="menu-toggle" id="menu-toggle">
            <ion-icon id="menu-icon" name="arrow-forward"></ion-icon> <!-- Biểu tượng mặc định -->
        </button>
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <ul class="nav flex-column">
                <nav>
                    <a class="navbar-brand" href="#">
                        <img src="~/img/Poly food.png" alt="Poly Food" class="nav-logo" />
                    </a>
                </nav>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="MonAns" asp-action="Index" asp-route-LoaiSanPham="1">
                        <i class="fas fa-drumstick-bite"></i> Gà
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="MonAns" asp-action="Index" asp-route-LoaiSanPham="2">
                        <ion-icon name="ice-cream-outline"></ion-icon> Kem
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="MonAns" asp-action="Index" asp-route-LoaiSanPham="3">
                        <ion-icon name="fast-food-outline"></ion-icon> Burger
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="MonAns" asp-action="Index" asp-route-LoaiSanPham="4">
                        <ion-icon name="pizza-outline"></ion-icon> Pizza
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="MonAns" asp-action="Index" asp-route-LoaiSanPham="5 Tây Chiên">
                        <ion-icon name="fast-food-outline"></ion-icon> Khoai Chiên
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="MonAns" asp-action="Index" asp-route-LoaiSanPham="5">
                        <ion-icon name="beer-outline"></ion-icon> Nước Uống
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="MonAns" asp-action="Index" asp-route-LoaiSanPham="6">
                        <ion-icon name="restaurant-outline"></ion-icon> Combo
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link" asp-controller="DangNhap" asp-action="LienHe">
                        <ion-icon name="call-outline"></ion-icon> Liên Hệ
                    </a>
                </li>
            </ul>
            @if (Context.Session.GetString("TenKhachHang") != null)
            {
                <button class="btn btn-danger mt-3 w-100 d-flex align-items-center justify-content-center">
                    <a href="/DangNhap/Logout" class="text-white text-decoration-none d-flex align-items-center">
                        <ion-icon name="log-out-outline" class="me-2"></ion-icon> Đăng Xuất
                    </a>
                </button>
            }
            else
            {
                <button class="btn btn-primary mt-3 w-100 d-flex align-items-center justify-content-center">
                    <a href="/DangNhap/Login" class="text-white text-decoration-none d-flex align-items-center">
                        <ion-icon name="log-out-outline" class="me-2"></ion-icon> Đăng Nhập
                    </a>
                </button>
            }
        </div>
    </header>

    <!-- Main Content -->
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2025 - Fast_Food - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const menuToggle = document.getElementById('menu-toggle');
            const menuIcon = document.getElementById('menu-icon');
            const mainContent = document.querySelector('.main-content');

            // Kiểm tra trạng thái sidebar từ localStorage (lưu trữ trạng thái mở/đóng)
            if (localStorage.getItem('sidebarActive') === 'true') {
                sidebar.classList.add('active');
                mainContent.style.marginLeft = '250px';
                menuToggle.style.left = '260px';
                menuIcon.setAttribute('name', 'arrow-back');
            }

            // Toggle trạng thái sidebar khi nhấn vào menu-toggle
            menuToggle.addEventListener('click', function () {
                sidebar.classList.toggle('active');

                if (sidebar.classList.contains('active')) {
                    mainContent.style.marginLeft = '250px'; // Di chuyển nội dung chính
                    menuToggle.style.left = '260px'; // Di chuyển nút toggle
                    menuIcon.setAttribute('name', 'arrow-back'); // Biểu tượng khi sidebar mở
                    // Lưu trạng thái mở vào localStorage
                    localStorage.setItem('sidebarActive', 'true');
                } else {
                    mainContent.style.marginLeft = '0'; // Trả lại nội dung chính
                    menuToggle.style.left = '20px'; // Trả lại vị trí nút toggle
                    menuIcon.setAttribute('name', 'arrow-forward'); // Biểu tượng khi sidebar đóng
                    // Lưu trạng thái đóng vào localStorage
                    localStorage.setItem('sidebarActive', 'false');
                }
            });

            // Logout function
            function Logout() {
                window.location.href = '/Account/Logout';
            }
        });
    </script>
</body>
</html>
